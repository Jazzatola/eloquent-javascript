    "test": "node --test test/**/*.test.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "3.6.2"
  }
}
